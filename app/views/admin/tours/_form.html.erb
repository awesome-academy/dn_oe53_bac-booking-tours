<div class="form-tour">
  <%= form_for(@tour, url: url, method: method) do |form| %>
    <%= render "shared/error_messages", resource: @tour %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, class: "form-control" %>
    </div>

    <div class="quantity">
       <div class="form-group">
        <%= form.label :sort %>
        <%= form.select(:sort, Tour.sorts.keys.to_a, {}, class: "form-control") %>
      </div>
      <div class="form-group item-quantity">
        <%= form.label :min_guest %>
        <%= form.number_field :min_guest, class: "form-control" %>
      </div>

      <div class="form-group item-quantity">
        <%= form.label :max_guest %>
        <%= form.number_field :max_guest, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :duration %>
      <%= form.text_field :duration, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :info_regular %>
      <%= form.text_field :info_regular, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :avatar %>
      <%= form.file_field :avatar, class: "form-control" %>
    </div>

    <% if @tour.persisted? %>
      <div class="button-create">
        <%= form.submit t(".edit_tour"), class: "btn btn-outline-primary" %>
      </div>
    <% else %>
      <div class="button-create">
        <%= form.submit t(".create_tour"), class: "btn btn-outline-primary" %>
    </div>
    <% end %>
  <% end %>
</div>
