<div class="card card-booking mt-3 p-3"><span class="klod text-center"><%= t ".name_customer" %></span>
  <% @booking.guests.each do |guest| %>
    <span class="data mt-2 text-center"><%= guest.name %></span>
    <span class="about mt-2 text-center"><%= t ".phone_number" %><%= guest.phone_number %></span>
    <span class="about mt-2 text-center"><%= t ".dob" %><%= guest.dob %></span>
    <span class="about mt-2 text-center"><%= t ".passport" %><%= guest.passport %></span>
  <% end %>

  <div class="image mr-3 text-center mt-3"> <img src="https://i.imgur.com/0LKZQYM.jpg" class="rounded-circle" width="60" />
  </div>
  <span class="name text-center"> <%= @booking.user.name %>,<span class="company"><%= t ".user" %></span></span></span>
  <div class="d-flex justify-content-center gap-2">
    <% if @booking.waiting? %>
      <button class="btn btn-success btn1"><%= link_to t(".agree"), update_status_admin_booking_path(confirm: "accepted"), method: :post %></button>
      <button class="btn btn-danger btn1"><%= link_to t(".reject"), update_status_admin_booking_path(confirm: "rejected"), method: :post %></button>
    <% elsif @booking.rejected? %>
      <button class="btn btn-success btn1"><%= link_to t(".agree"), update_status_admin_booking_path(confirm: "accepted"), method: :post %></button>
      <button class="btn btn-warning btn1"><%= link_to t(".waiting"), update_status_admin_booking_path(confirm: "waiting"), method: :post %></button>
    <% else %>
      <button class="btn btn-warning btn1"><%= link_to t(".waiting"), update_status_admin_booking_path(confirm: "waiting"), method: :post %></button>
      <button class="btn btn-danger btn1"><%= link_to t(".reject"), update_status_admin_booking_path(confirm: "rejected"), method: :post %></button>
    <% end %>
  </div>
 </div>
</div>
